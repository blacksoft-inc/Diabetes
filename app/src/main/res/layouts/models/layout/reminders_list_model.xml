<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/reminder_state"
        android:layout_width="@dimen/more_than_large_ic_size"
        android:layout_height="@dimen/more_than_large_ic_size"
        android:background="@drawable/reminders_state_on"
        android:src="@drawable/alarm_on_ic"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminder_title"
        style="@style/black_casual_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Title"
        android:textAppearance="?android:textAppearanceMedium"
        app:layout_constraintLeft_toRightOf="@id/reminder_state"
        app:layout_constraintRight_toLeftOf="@id/reminder_edit_imgview"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/reminder_description"
        style="@style/dark_casual_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="Item description"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/lite_dark"
        app:layout_constraintLeft_toLeftOf="@id/reminder_title"
        app:layout_constraintRight_toLeftOf="@id/reminder_edit_imgview"
        app:layout_constraintTop_toBottomOf="@id/reminder_title" />

    <ImageView
        android:id="@+id/reminder_delete_imgview"
        android:layout_width="@dimen/under_small_ic_size"
        android:layout_height="@dimen/under_small_ic_size"
        android:background="@drawable/red_circle"
        android:src="@drawable/delete_ic"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/reminder_edit_imgview"
        android:layout_width="@dimen/under_small_ic_size"
        android:layout_height="@dimen/under_small_ic_size"
        android:layout_marginRight="12dp"
        android:src="@drawable/edit_empty_ic"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/reminder_delete_imgview"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>


































