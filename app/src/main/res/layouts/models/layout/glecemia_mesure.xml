<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/glecemia_state"
        android:layout_width="@dimen/more_than_large_ic_size"
        android:layout_height="@dimen/more_than_large_ic_size"
        android:background="@drawable/green_circle"
        android:src="@drawable/glecemia_good_ic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/glecemia_infos"
        style="@style/black_casual_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:ellipsize="end"
        android:text="Mesure infos"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/glecemia_state"
        app:layout_constraintRight_toLeftOf="@id/mesure_time"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/mesure_time"
        style="@style/black_casual_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:ellipsize="end"
        android:text="10:00 pm"
        android:textAppearance="?android:textAppearanceSmall"
        android:textColor="@color/dark_green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/mesure_delete_imgview"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/mesure_delete_imgview"
        android:layout_width="@dimen/under_small_ic_size"
        android:layout_height="@dimen/under_small_ic_size"
        android:background="@drawable/red_circle"
        android:padding="4dp"
        android:src="@drawable/delete_ic"
        android:textAppearance="?android:textAppearanceSmall"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>



































